    --text-color: #4a0e0e;
    --bg-gradient: linear-gradient(to top, #fcc5e4 0%, #fda34b 15%, #ff7882 35%, #c8699e 52%, #7046aa 71%, #0c1db8 87%, #020f75 100%);
}

/* MODO NOCHE (7pm - 6am) - Romántico Oscuro */
body.night {
    --text-color: #ffffff; /* Texto blanco para que se lea */
    --bg-gradient: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);
}

html {
