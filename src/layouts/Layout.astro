		<script>
			function setTimeTheme() {
				const hour = new Date().getHours();
				const body = document.body;
				
				// Limpiamos clases anteriores
				body.classList.remove('day', 'sunset', 'night');

				if (hour >= 6 && hour < 17) {
					body.classList.add('day'); // De 6am a 5pm
				} else if (hour >= 17 && hour < 19) {
					body.classList.add('sunset'); // De 5pm a 7pm
				} else {
					body.classList.add('night'); // De 7pm a 6am
				}
			}

			// Ejecutar al cargar
			setTimeTheme();
		</script>
