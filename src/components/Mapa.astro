        if (archivo.endsWith('.mp4') || archivo.endsWith('.webm')) {
            // Es un video
            return `<video src="${rutaCompleta}" class="popup-media" controls playsinline></video>`;
        } else {
            // Es una imagen
            return `<img src="${rutaCompleta}" class="popup-media" onerror="this.style.display='none'"/>`;
